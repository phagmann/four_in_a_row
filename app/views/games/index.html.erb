<h1>Listing games</h1>

<table>
  <thead>
    <tr>
      <th>Player</th>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @games.each do |game| %>
      <tr>
      <% if game.name != "" %>

        <td><%= game.name %></td>
        <td><%= link_to 'Play', game %></td>
        <td><%= link_to 'Delete', game, method: :delete %></td>
      <% else %>
        <% game.destroy %>
      <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Back', root_path %>