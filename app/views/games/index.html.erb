

<body class="show">



<div class="box">

<h1 style=" position:relative;right:600px;font-size:30px;color:#fff;">Listing games</h1>


<table>

  <thead>

    <tr>
      <th> <h1> Name </h1> </th>
      <th colspan="3"></th>
    </tr>
  </thead>

  
    <% @games.each do |game| %>
      <tr>
      <% if game.name != "" %>

        <td><h1><%= game.name %></h1></td>
        <td><button><%= link_to 'Play', game %></button></td>
        <td><button><%= link_to 'Delete', game, method: :delete %></button></td>

      <% else %>
        <% game.destroy %>
      <% end %>
      </tr>
    <% end %>
  
</table>

<br>

<button style=" text-align:center;margin:30px 0;"><%= link_to 'Back', root_path %></button>
<div style=" position:relative;left:470px;bottom:75px;"> <%= render 'form2' %> </div>

</div>
</body>